<Window x:Class="WpfVideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVideoPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="681">
    <Grid>
        <MediaElement Source="{Binding VideoPath}" HorizontalAlignment="Left" Height="203" Margin="50,35,0,0" VerticalAlignment="Top" Width="279"/>
        <Button Command="{Binding LoadCommand}" Content="Load Video" HorizontalAlignment="Left" Margin="50,255,0,0" VerticalAlignment="Top" Width="75"/>
        <Image Source="{Binding Image}" HorizontalAlignment="Left" Height="203" Margin="365,35,0,0" VerticalAlignment="Top" Width="253"/>

    </Grid>
</Window>
